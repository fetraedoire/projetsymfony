{% extends "base.html.twig" %}
{% block body %}
	<h1>Registration</h1>
	{{form_start(form)}}
	{{form_row(form.username,{'label':'Nom d\'utilisateur','attr':{'placeholder':'Nom d\'utilisateur'}})}}
	{{form_row(form.email,{'label':'Email','attr':{'placeholder':'Email'}})}}
	{{form_row(form.password,{'label':'Password','attr':{'placeholder':'Password'}})}}
	{{form_row(form.confirm_password,{'label':'Confirm Password','attr':{'placeholder':'Confirm Password'}})}}
	<button type="submit" class="btn btn-success">Inscrire</button>
	{{form_end(form)}}
{% endblock %}
